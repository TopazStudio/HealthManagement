<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape
            android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/app_init_lightGray_inputs_focused"/>
            <padding
                android:right="5dp"
                android:left="10dp"
                android:top="5dp"
                android:bottom="5dp"/>
            <stroke
                android:color="@color/Primary"
                android:width="2dp"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/app_init_lightGray_inputs_unfocused"/>
            <padding
                android:right="5dp"
                android:left="10dp"
                android:top="5dp"
                android:bottom="5dp"/>
        </shape>
    </item>
</selector>