<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid
                        android:color="@color/PrimaryDark"/>
                    <corners
                        android:radius="50dp"/>
                    <padding
                        android:top="10dp"
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"/>
                    <size
                        android:height="20dp"
                        android:width="20dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_chevron_right_24dp" />
        </layer-list>
    </item>

    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape>
                    <solid
                        android:color="@color/PrimaryDisabled"/>
                    <corners
                        android:radius="50dp"/>
                    <padding
                        android:top="10dp"
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"/>
                    <size
                        android:height="18dp"
                        android:width="18dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_chevron_right_24dp"/>
        </layer-list>
    </item>

    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid
                        android:color="@color/Primary"/>
                    <corners
                        android:radius="50dp"/>
                    <padding
                        android:top="10dp"
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"/>
                    <size
                        android:height="10dp"
                        android:width="10dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_chevron_right_24dp"/>
        </layer-list>

    </item>
</selector>