<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <ripple
                    android:color="@color/lightGray_inputs_unfocused"
                    android:radius="10dp"/>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/red"/>
                    <padding
                        android:bottom="10dp"
                        android:top="10dp"
                        android:left="10dp"
                        android:right="10dp"/>
                    <stroke
                        android:color="@color/Primary"
                        android:width="2dp"/>
                </shape>
            </item>
            <item android:width="60dp" android:height="60dp" android:bottom="5dp" android:drawable="@drawable/ic_fire" android:gravity="bottom|center_horizontal" />
        </layer-list>
    </item>
    <item android:state_enabled="true" >
        <layer-list>
            <item>
                <ripple
                    android:color="@color/lightGray_inputs_unfocused"
                    android:radius="10dp"/>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/redDark"/>
                    <padding
                        android:bottom="10dp"
                        android:top="10dp"
                        android:left="10dp"
                        android:right="10dp"/>

                </shape>
            </item>
            <item android:width="60dp" android:height="60dp" android:bottom="5dp" android:drawable="@drawable/ic_fire" android:gravity="bottom|center_horizontal" />
        </layer-list>
    </item>
</selector>